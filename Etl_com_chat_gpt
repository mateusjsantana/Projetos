        "import requests\n",
        "import json\n",
        "\n",
        "def get_user(id):\n",
        "    response = requests.get('https://fakerapi.it/api/v1/users?_quantity=5')\n",
        "    return response.json()['data']\n",
        "\n",
        "users = get_user(id)\n",
        "\n",
        "firstnames = [user['firstname'] for user in users]\n",
        "\n",
        "print(json.dumps(firstnames, indent=2))\n",
        "\n",
        "\n"
      ],
